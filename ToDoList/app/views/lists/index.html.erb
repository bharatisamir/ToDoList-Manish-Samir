<p id="notice"><%= notice %></p>

<h1>Showing different Lists</h1>

<table class="table">
  <thead>
    <tr>
      <th>List name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lists.each do |list| %>
      <tr>
        <td><%= list.list_name %></td>
        <td><%= link_to 'Show', list , class: 'btn btn-primary btn-xs'%></td>
        <td><%= link_to 'Edit', edit_list_path(list), class: 'btn btn-info btn-xs'  %></td>
        <td><%= link_to 'Delete', list, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs'  %></td>
        <td><%= link_to 'Add items',new_list_list_item_path(list.id), class: 'btn btn-primary btn-xs' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New List', new_list_path, class: 'btn btn-success' %>
